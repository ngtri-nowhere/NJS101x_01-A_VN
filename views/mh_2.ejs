    <body>
        <%- include('./navigation.ejs') %>
            <main>
                <div class="btn__addNew">
                    <a class="btn__addNew__btn" href="#">Add New Employee <i class="fas fa-user-edit"></i></a>
                </div>
                <div class="addNew__container">
                    <div class="addNew__employee">
                        <h4>ID:
                            <%= prods._id %>
                        </h4>
                        <h4>Name:
                            <%= prods.name %>
                        </h4>
                        <h4>Dath of Birth:
                            <%= prods.doB %>
                        </h4>
                        <h4>Salary Scale:
                            <%= prods.salaryScale %>
                        </h4>
                        <h4>Start Date:
                            <%= prods.startDate %>
